{
  "publisher": "antfu",
  "name": "@vscode/unocss",
  "displayName": "UnoCSS",
  "version": "0.44.7",
  "private": true,
  "description": "UnoCSS for VS Code",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unocss/unocss",
    "directory": "packages/vscode"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "preview": true,
  "icon": "res/logo.png",
  "engines": {
    "vscode": "^1.62.0"
  },
  "activationEvents": [
    "workspaceContains:**/vite.config.*",
    "workspaceContains:**/nuxt.config.*",
    "workspaceContains:**/uno.config.*",
    "workspaceContains:**/unocss.config.*",
    "workspaceContains:**/package.json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "unocss.reload",
        "title": "Reload UnoCSS",
        "category": "UnoCSS"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "UnoCSS",
      "properties": {
        "unocss.disable": {
          "type": "boolean",
          "default": false,
          "description": "Disable the UnoCSS extension"
        },
        "unocss.root": {
          "type": "string",
          "description": "Project root that contains the UnoCSS configuration file"
        },
        "unocss.underline": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable underline decoration for class names"
        },
        "unocss.colorPreview": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable color preview decorations"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch src",
    "publish": "esno ./scripts/publish.ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.62.0",
    "@unocss/nuxt": "workspace:*",
    "@unocss/preset-uno": "workspace:*",
    "esno": "^0.16.3",
    "jiti": "^1.14.0",
    "prettier": "^2.7.1",
    "tsup": "^6.2.0",
    "unconfig": "^0.3.5"
  }
}
